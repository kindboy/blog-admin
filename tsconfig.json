{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "noImplicitAny": false,
        "module": "esnext",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "jsx": "react",
        "sourceMap": true,
        "outDir": "./dist/",
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": [
        "./src/**/*"
    ]
}